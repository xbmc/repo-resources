<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="resource.language.fil"
  version="1.0.1"
  name="Filipino (Talagog)"
  provider-name="Team Kodi">
  <requires>
    <import addon="kodi.resource" version="1.0.1"/>
  </requires>
  <extension
    point="kodi.resource.language"
    locale="fil">
    <charsets>
      <gui unicodefont="true">CP1252</gui>
      <subtitle>CP1252</subtitle>
    </charsets>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en_GB">Filipino (Talagog) language pack</summary>
    <description lang="en_GB">Filipino (Talagog) version of all texts used in Kodi.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
