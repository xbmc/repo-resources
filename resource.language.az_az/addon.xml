<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="resource.language.az_az"
  version="2.0.0"
  name="Azerbaijani"
  provider-name="Team Kodi">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.resource.language"
    locale="az_AZ">
    <charsets>
      <gui unicodefont="true">CP1254</gui>
      <subtitle>CP1254</subtitle>
    </charsets>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Azerbaijani language pack</summary>
    <description lang="en">Azerbaijani version of all texts used in Kodi.</description>
    <platform>all</platform>
  </extension>
</addon>
