<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="resource.language.ja_jp"
  version="2.0.3"
  name="Japanese"
  provider-name="Team Kodi">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.resource.language"
    locale="ja_JP">
    <charsets>
      <gui unicodefont="true">CP932</gui>
      <subtitle>CP932</subtitle>
    </charsets>
    <sorttokens>
      <token>The</token>
    </sorttokens>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Japanese language pack</summary>
    <description lang="en">Japanese version of all texts used in Kodi.</description>
    <platform>all</platform>
  </extension>
</addon>
