<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="resource.language.ja_jp"
  version="10.0.56"
  name="Japanese"
  provider-name="Team Kodi">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
    <import addon="resource.language.zh_cn" version="9.0.0"/> <!-- To get his font file about where support all -->
  </requires>
  <extension
    point="kodi.resource.language"
    locale="ja_JP">
    <charsets>
      <gui unicodefont="true">CP932</gui>
      <subtitle>CP932</subtitle>
    </charsets>
    <sorttokens>
      <token>The</token>
    </sorttokens>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en_GB">Japanese language pack</summary>
    <description lang="en_GB">Japanese version of all texts used in Kodi.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
